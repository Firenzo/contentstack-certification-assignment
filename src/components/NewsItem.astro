---
import Button from "./Button.astro";
import { toDateString } from "../utils/index";

interface Props {
  title: string;
  date: string;
  description: string;
  image: string;
  imageAltText: string;
  href: string;
}

const { title, date, description, image, imageAltText, href } = Astro.props;

const publicationDate = toDateString(date);
---

<div class="news-item">
  <div class="news-item-image">
    <img src={image} alt={imageAltText} />
  </div>
  <div class="news-content-snippet">
    <h3 class="news-title margin-bottom-0">{title}</h3>
    <p class="datetime">
      <time datetime={publicationDate}>{publicationDate}</time>
    </p>
    <p class="description mw-text">{description}</p>
    <Button href={href} text="Read More" />
  </div>
</div>

<style scoped lang="scss">
  @use "../styles/breakpoints.scss" as *;

  .news-item {
    width: 100%;
    margin-left: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    @include mq-up("big-tablet") {
      flex-direction: row;
      //   max-width: 922px; // width at 1024px
    }

    &:not(:last-of-type) {
      margin-right: 8rem;
    }

    .news-content-snippet {
      align-self: flex-start;
      margin-left: 3.5%;
    }

    .news-title {
      margin-top: 1rem;
      margin-bottom: 1rem;
    }

    .news-item-image {
      border-radius: 30px;
      overflow: hidden;
      width: 93%;
      max-width: 405px;

      @include mq-up("big-tablet") {
        align-self: flex-start;
      }
    }

    .description {
      font-size: 16px;
      margin-bottom: 3rem;
    }

    .datetime {
      color: #767676;
      font-size: 16px;
      margin-bottom: 1rem;
    }
  }
</style>
