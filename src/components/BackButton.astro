---
import ArrowLeft from "../assets/icons/arrow-left-solid.svg?raw";

interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---

<div class="container">
  <div class="backButton margin-top-2 margin-bottom-2">
    <a href={href}>
      <Fragment set:html={ArrowLeft} />
      <span>{label}</span>
    </a>
  </div>
</div>

<style scoped lang="scss">
  .backButton {
    width: fit-content;
    z-index: 10;
    position: relative;

    a {
      color: white;
      text-decoration: none;
      display: flex;
      align-items: center;
      font-size: 20px;
      font-weight: bold;

      span {
        margin-left: 1rem;
      }
    }
  }
</style>

<style is:global lang="scss">
  @use "../styles/global.scss";
  .backButton {
    svg {
      fill: white;
      width: 30px;
    }
  }
</style>
