---
import ArrowLeft from "../assets/icons/arrow-left-solid.svg?raw";

interface Props {
  href: string;
  label: string;
  textColor: string;
}

const { href, label, textColor } = Astro.props;
---

<div class="container">
  <div class="backButton margin-top-2 margin-bottom-2">
    <a href={href}>
      <Fragment set:html={ArrowLeft} />
      <span>{label}</span>
    </a>
  </div>
</div>

<style scoped lang="scss" define:vars={{ textColor }}>
  .backButton {
    width: fit-content;
    z-index: 10;
    position: relative;

    a {
      color: var(--textColor);
      text-decoration: none;
      display: flex;
      align-items: center;
      font-size: 20px;
      font-weight: bold;

      span {
        margin-left: 1rem;
      }
    }
  }
</style>

<style is:global lang="scss">
  @use "../styles/global.scss";
  .backButton {
    svg {
      fill: var(--textColor);
      width: 30px;
    }
  }
</style>
