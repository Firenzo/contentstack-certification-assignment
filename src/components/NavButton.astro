---
import buttonBackgroundImage from "../assets/images/black-poke-ball.png";

interface Props {
  text: string;
  image: string;
  href: string;
  color: "red" | "yellow" | "blue";
}

const { text, image, href, color } = Astro.props;
---

<a href={href} class:list={["nav-button", color]}>
  <div class="background-image">
    <img src={buttonBackgroundImage.src} alt="" />
  </div>
  <p class="button-label margin-bottom-0">
    {text}
  </p>
</a>
<style scoped lang="scss">
  .nav-button {
    border-radius: 16px;
    height: 117px;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    overflow: hidden;
    max-width: 400px;
    margin: auto;
    margin-bottom: 1rem;

    .background-image {
      width: 100%;

      img {
        width: 210px;
        height: 210px;
        translate: -30% -10%;
        rotate: -20deg;
        opacity: 20%;
      }
    }

    .button-label {
      position: absolute;
      font-size: 30px;
      margin-bottom: 2rem;
      margin-top: 2rem;
      font-weight: bold;
    }

    &.red {
      background: linear-gradient(180deg, #fa2828, #b20303);
    }

    &.yellow {
      background: linear-gradient(180deg, #fae528, #b26c03);
    }

    &.blue {
      background: linear-gradient(180deg, #2862fa, #035eb2);
    }
  }
</style>
