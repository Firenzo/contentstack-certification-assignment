---
import NavButton from "./NavButton.astro";
import { setRoute } from "../utils/index";

const homeURL = setRoute("/");
const newsURL = setRoute("/news");
const pokedexURL = setRoute("/pokedex");
---

<nav class="main-navigation">
  <div class="container">
    <ul>
      <li>
        <NavButton href={homeURL} image="#" color="red" text="Home" />
      </li>
      <li><NavButton href={newsURL} image="#" color="yellow" text="News" /></li>
      <li>
        <NavButton href={pokedexURL} image="#" color="blue" text="Pokedex" />
      </li>
    </ul>
  </div>
</nav>

<style scoped lang="scss">
  @use "../styles/breakpoints.scss" as *;

  .main-navigation {
    margin-bottom: 4rem;

    @include mq-up("tablet") {
      translate: 0 -5rem;
      margin-bottom: -5rem;
      ul {
        display: flex;
        gap: 1rem;

        li {
          width: 100%;
        }
      }
    }
  }

  .main-navigation ul {
    list-style: none;
  }
</style>
